
{{#foreach posts}}

<article class="{{post_class}}">
	<div class="inner">
		<header class="post-header">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta"> {{reading_time minute=(t "1 min read") minutes=(t "% min read")}} | <time datetime="{{date format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time></span>
			<div class="clear"></div>
		</header>

		<section class="post-excerpt">
			<p>{{excerpt words="12"}}&hellip;</p>
		</section>
	</div>
</article>

{{/foreach}}
